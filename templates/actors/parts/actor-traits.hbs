                    </div>
                    <div class="item-topic point-cost"> 
                        {{data.points}}
                    </div>
                    <div class = "item-controls flexrow">
                        <a class="item-control item-edit">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a class="item-control item-delete ">
                            <i class="fas fa-trash"></i>
                        </a>
                    </div> 
                </li>
                {{/each}}
            </ol>
            <li class="divider"></li>
            {{!-- Disadvantages --}}
            <li class="disadvantages inventory-header flexrow">
                <h2 class="item-name flexrow">
                {{localize "sjgurps4e.sheet.disadvantages"}}
                </h2>
                <div class="item-topic">{{localize "sjgurps4e.itemProperties.cost"}}</div>
                <div class = "item-controls flexrow">
                    <a class="item-control item-create" data-type="trait" data-trait="traitDisadvantage" title="{{localize "sjgurps4e.sheet.addTrait"}}" >
                    <i class="fas fa-plus"></i>
                    </a>
                </div>
            </li>
            <ol class="item-list">
                {{#each disadvantages as |disadvantage id|}}
                <li class="item flexrow" data-itemid="{{_id}}">
                    <div class="trait-info trait-name item-name">
                        <img class="rollable display-info"  id="icon" src="{{img}}" height = "24px">
                        <a class="item-detail" >{{name}}</a>
                    </div>
                    <div class="item-topic point-cost"> 
                        {{data.points}}
                    </div>
                    <div class = "item-controls flexrow">
                        <a class="item-control item-edit">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a class="item-control item-delete ">
                            <i class="fas fa-trash"></i>
                        </a>
                    </div> 
                </li>
                {{/each}}
            </ol>
            {{!-- Quirks --}}
            <li class="quirks inventory-header flexrow">
                <h2 class="item-name flexrow">
                {{localize "sjgurps4e.sheet.quirks"}}
                </h2>
                <div class="item-topic">{{localize "sjgurps4e.itemProperties.cost"}}</div>
                <div class = "item-controls flexrow">
                    <a class="item-control item-create" data-type="trait" data-trait="traitQuirk" title="{{localize "sjgurps4e.sheet.addTrait"}}" >
                    <i class="fas fa-plus"></i>
                    </a>
                </div>
            </li>
            <ol class="item-list">
                {{#each quirks as |quirk id|}}
                <li class="item flexrow" data-itemid="{{_id}}">
                    <div class="trait-info trait-name item-name">
                        <img class="rollable display-info"  id="icon" src="{{img}}" height = "24px">
                        <a class="item-detail" >{{name}}</a>
                    </div>
                    <div class="item-topic point-cost"> 
                        {{data.points}}
                    </div>
                    <div class = "item-controls flexrow">
                        <a class="item-control item-edit">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a class="item-control item-delete ">
                            <i class="fas fa-trash"></i>
                        </a>
                    </div> 
                </li>
                {{/each}}
            </ol>

        </ol>

        <div class = "templates">
        {{!--character templates --}}
        </div>
    </div>
</div>