<div class="equipment-card item" data-itemid="{{_id}}">
    <div class="equip-info equip-name">
        <p><img id="icon" src="{{img}}" height = "24px">
        <a class="item-detail">{{name}}</a></p>
    </div>
    <div class="equip-info" "equip-stats">
        <p> 
        {{#localizeData "itemLocation" data.location }}{{/localizeData}} | 
        {{data.weight}} | 
        {{data.cost}} | 
        {{data.dr}} | 

        {{#unless data.isFav}}
        <a class="item-favorite inline-edit">
            <i class="far fa-bookmark" data-field="isFav" data-isFav="true"></i>
        </a>
        {{/unless}}
        {{#if data.isFav}}
        <a class="item-favorite inline-edit" data-field="isFav" data-isFav="false">
            <i class="fas fa-bookmark"></i>
        </a>
        {{/if}}
        <a class="item-edit">
            <i class="fas fa-edit"></i>
        </a>
        
        <a class="item-delete">
            <i class="fas fa-trash"></i>
        </a>
        </p>
    </div>
</div>
