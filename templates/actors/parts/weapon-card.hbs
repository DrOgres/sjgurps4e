<div class="weapon-card">
<div class="item" data-itemid="{{_id}}">
    <div class="weapon-info weapon-name">       
        <img class="rollable" data-source="item" data-target="{{#getRollTarget}}{{/getRollTarget}}{{data.skillMod}}"  data-roll="3d6" data-label="{{name}} Attack!"id="icon" src="{{img}}" height = "24px">
        <a class="item-detail">{{name}}</a>
    </div>
    <div class="weapon-info weapon-stats">
        <div class="skillToRoll">
           <div class="form-group weapon-inine">
                <div class="skillselect">
                <label>{{localize "sjgurps4e.itemProperties.skill"}}</label>
                <select class="inline-edit" name="data.skillUsed" data-field="data.skillUsed">
                {{#select data.skillUsed}}
                {{#each @root.data.ownedSkillList as |skill name|}}
                <option value="{{name}}">{{skill}}</option>
                {{/each}}
                {{/select}}
                </select>
                </div>
            </div>
            <div class="form-group mod-number">
                <label>{{localize "sjgurps4e.sheet.skillMod"}}</label> <input class="inline-edit" name="data.skillMod" data-field="data.skillMod" type="text" placeholder="0" value ="{{data.skillMod}}" data-dtype="Number" />
            </div>
       </div>
        <p> 
        Weight: {{data.weight}}
        Cost: {{data.cost}}
        {{#unless data.isFav}}
        <a class="item-favorite inline-edit">
            <i class="far fa-bookmark" data-field="isFav" data-isFav="true"></i>
        </a>
        {{/unless}}
        {{#if data.isFav}}
        <a class="item-favorite inline-edit" data-field="isFav" data-isFav="false">
            <i class="fas fa-bookmark"></i>
        </a>
        {{/if}}
        
        <a class="item-edit">
            <i class="fas fa-edit"></i>
        </a>
        <a class="item-delete">
            <i class="fas fa-trash"></i>
        </a>
        </p>
</div>
</div>

</div>
