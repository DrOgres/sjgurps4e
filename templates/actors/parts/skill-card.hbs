<div class="skill-card item" data-itemid="{{_id}}">
    <div class="skill-info skill-name">
        <img class="rollable" data-source="skill" data-label="{{name}}" data-roll="3d6" id="icon" src="{{img}}" height = "24px">
        <a class="item-detail" >{{name}}</a>
        {{data.stat}}/{{data.difficulty}}
    </div>
    <div class="skill-info" "skill-stats">
        <div> 
        Skill Level <input class="inline-edit" data-field="data.level" name="data.level" type="text" value = "{{data.level}}" placeholder="" data-dtype="Number"/>   
        Effective Level: {{data.effective}}</br>
        
        Point Cost {{data.points}}
        
        {{#unless data.isFav}}
        <a class="item-favorite inline-edit">
            <i class="far fa-bookmark" data-field="isFav" data-isFav="true"></i>
        </a>
        {{/unless}}
        {{#if data.isFav}}
        <a class="item-favorite inline-edit" data-field="isFav" data-isFav="false">
            <i class="fas fa-bookmark"></i>
        </a>
        {{/if}}
        <a class="item-edit">
            <i class="fas fa-edit"></i>
        </a>
        <a class="item-delete">
            <i class="fas fa-trash"></i>
        </a>
        </div>
    </div>
</div>