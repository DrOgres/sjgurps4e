<div class="dr-panel">
    <div class="panel-header">{{localize "sjgurps4e.dr"}}</div>

    {{!-- Simple One Location DR Panel --}}
    {{#if (eq hitLocationScope "basic")}}
    <div class="single-location-dr panel-body">{{localize "sjgurps4e.itemLocation.body"}}: CALC DR</div>
    {{/if}}
    {{!-- Intermediate 6 location DR Panel --}}
    {{#if (eq hitLocationScope "intermediate")}}
    <div class="six-location-dr panel-body"> 
        <ol>
            <li>{{localize "sjgurps4e.itemLocation.head"}} : DRVALUE HEAD</li>
            <li>{{localize "sjgurps4e.itemLocation.torso"}} : DRVALUE TORSO</li>
            <li>{{localize "sjgurps4e.itemLocation.arm"}} : DRVALUE ARM</li>
            <li>{{localize "sjgurps4e.itemLocation.hand"}} : DRVALUE HAND</li>
            <li>{{localize "sjgurps4e.itemLocation.leg"}} : DRVALUE LEG</li>
            <li>{{localize "sjgurps4e.itemLocation.foot"}} : DRVALUE FOOT</li>
        </ol>
    </div>
    {{/if}}
    {{!-- Detailed 12 location DR Panel  --}}
    {{#if (eq hitLocationScope "detailed")}}
    <div class="twelve-location-dr panel-body"> 
        <ol>
            <li>{{localize "sjgurps4e.itemLocation.head"}}  : DRVALUE HEAD</li>
            <li>{{localize "sjgurps4e.itemLocation.neck"}}  : DRVALUE NECK</li>
            <li>{{localize "sjgurps4e.itemLocation.torso"}}  : DRVALUE TORSO</li>
            <li>{{localize "sjgurps4e.itemLocation.groin"}}  : DRVALUE GROIN</li>
            <li>{{localize "sjgurps4e.itemLocation.rArm"}}  : DRVALUE RARM</li>
            <li>{{localize "sjgurps4e.itemLocation.lArm"}}  : DRVALUE LARM</li>
            <li>{{localize "sjgurps4e.itemLocation.rHand"}} : DRVALUE RHAND</li>
            <li>{{localize "sjgurps4e.itemLocation.lHand"}}  : DRVALUE LHAND</li>
            <li>{{localize "sjgurps4e.itemLocation.rLeg"}}  : DRVALUE RLEG</li>
            <li>{{localize "sjgurps4e.itemLocation.lLeg"}}  : DRVALUE LLEG</li>
            <li>{{localize "sjgurps4e.itemLocation.rFoot"}}  : DRVALUE RFOOT</li>
            <li>{{localize "sjgurps4e.itemLocation.lFoot"}}  : DRVALUE LFOOT</li>
        </ol>
    </div>
    {{/if}}
</div>