
<ol class="inventory-list">
    
<li class = "inventory-totals flexrow">
    <h4 class="money"><label><i class="fas fa-coins"></i>: </label>
    <input name="data.money" type="text" value="{{data.money}}" placeholder="0"/>
    <input name="data.denomination" type="text" value="{{data.denomination}}" placeholder="$" title="Denomination"/>
    </h4>
    <h4 class="weight">{{localize "sjgurps4e.sheet.totalWeight"}}: {{actor.data.totalweight}}</h4>
</li>
<li class="weapons inventory-header flexrow">  {{!-- category headers here --}}
    <h2 class="item-name flexrow">
    {{localize "sjgurps4e.sheet.weapons"}}</h2>
    <div class="item-topic item-skill">{{localize "sjgurps4e.itemProperties.skill"}}</div>
    <div class="item-topic item-mod">{{localize "sjgurps4e.sheet.skillMod"}}</div>
    <div class="item-topic">{{localize "sjgurps4e.itemProperties.weight"}}</div>
    <div class="item-topic">{{localize "sjgurps4e.itemProperties.cost"}}</div>
    <div class = "item-controls flexrow">
    <a class="item-control item-create" data-type="weapon" title="{{localize "sjgurps4e.sheet.addWeapon"}}" >
        <i class="fas fa-plus"></i>
    </a>
    </div>
</li>
<ol class="item-list">
    
       {{#each weapons as |weapon id|}}
       <li class="item flexrow" data-itemid="{{_id}}">
       {{> "systems/sjgurps4e/templates/actors/parts/weapon-card.hbs" weapon}}
            <div class = "item-controls flexrow">
                {{#unless data.isFav}}
                <a class="item-control item-favorite inline-edit">
                    <i class="far fa-bookmark" data-field="isFav" data-isFav="true"></i>
                </a>
                {{/unless}}
                {{#if data.isFav}}
                <a class="item-control item-favorite inline-edit" data-field="isFav" data-isFav="false">
                    <i class="fas fa-bookmark"></i>
                </a>
                {{/if}}
                
                <a class="item-control item-edit">
                    <i class="fas fa-edit"></i>
                </a>
                <a class="item-control item-delete ">
                    <i class="fas fa-trash"></i>
                </a>
            </div> 
       </li>
       {{/each}}
    
</ol> 
    <li class="equipment inventory-header flexrow"> {{!-- category headers here --}}
        <h2 class="item-name flexrow">{{localize "sjgurps4e.sheet.equipment"}}</h2>
        <div class="item-topic">{{localize "sjgurps4e.location"}}</div>
        <div class="item-topic">DR</div>
        <div class="item-topic">{{localize "sjgurps4e.itemProperties.weight"}}</div>
        <div class="item-topic">{{localize "sjgurps4e.itemProperties.cost"}}</div>
        <div class = "item-controls flexrow">
            <a class="item-control item-create" data-type="equipment" title="{{localize "sjgurps4e.sheet.addEquip"}}">
                <i class="fas fa-plus"></i>
            </a>
        </div>  
        
    </li>
    <ol class="item-list">
        <section class="armor-list">
        {{#each equips as |equip id|}}
        <li class="item flexrow" data-itemid = "{{_id}}">
            {{> "systems/sjgurps4e/templates/actors/parts/equip-card.hbs" equip}}
            <div class = "item-controls flexrow">
                {{#if data.isEquipable}}
                    {{#unless data.equiped}}
                         <a class="item-control item-equip inline-edit" data-field="equiped" data-equiped="true" title="{{localize "sjgurps4e.sheet.equipHint"}}">
                            <i class="far fa-star"></i>
                        </a>
                    {{/unless}}
                    {{#if data.equiped}}
                        <a class="item-control item-equip inline-edit" data-field="equiped" data-equiped="false"  title="{{localize "sjgurps4e.sheet.equipHint"}}">
                            <i class="fas fa-star"></i>
                        </a>
                    {{/if}} 
                {{/if}}
                {{#unless data.isFav}}
                <a class="item-control item-favorite inline-edit">
                    <i class="far fa-bookmark" data-field="isFav" data-isFav="true" title="{{localize "sjgurps4e.sheet.favHint"}}"></i>
                </a>
                {{/unless}}
                {{#if data.isFav}}
                <a class="item-control item-favorite inline-edit" data-field="isFav" data-isFav="false" title="{{localize "sjgurps4e.sheet.favHint"}}">
                    <i class="fas fa-bookmark"></i>
                </a>
                {{/if}}
                <a class="item-control item-edit">
                    <i class="fas fa-edit"></i>
                </a>
                
                <a class="item-control item-delete">
                    <i class="fas fa-trash"></i>
                </a>
            </div>
        </li>
        {{/each}}
        </section>
    </ol>
</ol>