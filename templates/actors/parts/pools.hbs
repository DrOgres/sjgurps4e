    <div class = "statblock">
    <table class = "statline">
        <tr>
            <td>
                <label class="statname" data-label="HP">HP</label>       
            </td>
            <td class="statvalue multiple">
            <input name="data.HP.value" type="text" value="{{data.HP.value}}" title="{{localize "sjgurps4e.sheet.currentHealth"}}" placeholder="10" data-dtype="Number"> 
            </td>
            <td class="sep"> / </td> 
            <td class="statvalue multiple">
                
            <input name="data.HP.max" type="text" value="{{data.HP.max}}" title="{{localize "sjgurps4e.sheet.2ptCostExp"}}" placeholder="10" data-dtype="Number">
            </td>
            <td>
                <div class = "pointvalue">
                {{#statValue data.HP.max "HP" data.ST.value}}
                0
                {{/statValue}}
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <label class="statname rollable" data-source="stat" data-target="{{data.Will.value}}"  data-roll="3d6" data-label="Will">Will</label>       
            </td>
            <td>
                <div class = "statvalue">
                    <input name="data.Will.value" type="text" placeholder="10" value = "{{data.Will.value}}" title="{{localize "sjgurps4e.sheet.5ptCostExp"}}" data-dtype="Number" />
                </div>
            </td>
            <td>&nbsp;</td>
            <td>
                <div class = "pointvalue">
                {{#statValue data.Will.value "Will"}}
                0
                {{/statValue}}
               
                </div>
            </td>
            <td>
                <div class="pointslabel">{{localize "sjgurps4e.sheet.points"}}</div>
            </td>
        </tr>
        <tr>
            <td>
                <label class="statname rollable" data-source="stat" data-target="{{data.Per.value}}" data-roll="3d6" data-label="Perception">Per</label>       
            </td>
            <td>
                <div class = "statvalue">
                    <input name="data.Per.value" type="text" placeholder="10" value = "{{data.Per.value}}" title="{{localize "sjgurps4e.sheet.5ptCostExp"}}" data-dtype="Number" />
                </div>
            </td>
            <td>&nbsp;</td>
            <td>
                <div class = "pointvalue">
                {{#statValue data.Per.value "Per"}}
                0
                {{/statValue}}
               
                </div>
            </td>
            <td>
                <div class="pointslabel">{{localize "sjgurps4e.sheet.points"}}</div>
            </td>
        </tr>
        <tr>
            <td>
                <label class="statname" data-label="FP">FP</label>       
            </td>
            <td class="statvalue multiple">
            <input name="data.FP.value" type="text" value="{{data.FP.value}}" placeholder="10" title="{{localize "sjgurps4e.sheet.currentFatigue"}}" data-dtype="Number"> 
            </td>
            <td class="sep"> / </td> 
            <td class="statvalue multiple">
            <input name="data.FP.max" type="text" value="{{data.FP.max}}" title="{{localize "sjgurps4e.sheet.3ptCostExp"}}" placeholder="10" data-dtype="Number">
            </td>
            <td>
                <div class = "pointvalue">
                {{#statValue data.FP.max "FP" data.HT.value}}
                0
                {{/statValue}}
                </div>
            </td>
        </tr>
    </table>
    </div>