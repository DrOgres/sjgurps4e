{{!-- Common weapon data --}}
      <h4 class="common-weapon-header flexrow">
            <div class="header-item">
              {{localize "sjgurps4e.itemProperties.damage"}}
            </div>
            <div class="header-item">
                {{localize "sjgurps4e.itemProperties.modifier"}}
            </div>
            <div class="header-item">
                {{localize "sjgurps4e.itemProperties.damageType"}}
            </div>
            <a class="damage-control add-damage"><i class="fas fa-plus"></i></a>
            {{!-- Add a plus button to make additional damage rows for variant damages --}}       
      </h4> 
        <ol class="damage-parts form-group-stacked">
           {{#each data.damage.parts as |part n|}}
           <li class="damage-part flexrow" data-damage-part="{{n}}">
              <select name="data.damage.parts.{{n}}.0" >
                {{#select (lookup this "0")}}
                    <option value="">{{ localize "sjgurps4e.none" }}</option>
                  {{#each ../config.damageFormula as |name type|}}
                    <option value="{{type}}">{{localize name}}</option>
                  {{/each}}
                {{/select}}
              </select>
              <input type="text" name="data.damage.parts.{{n}}.1" value="{{lookup this "1"}}"/>
              <select name="data.damage.parts.{{n}}.2">
                  {{#select (lookup this "2")}}
                    <option value="">{{ localize "sjgurps4e.none" }}</option>
                    {{#each ../config.damageType as |name type|}}
                      <option value="{{type}}"> {{localize name}}</option>
                    {{/each}}
                  {{/select}}
              </select>
              <a class="delete-damage damage-control"><i class="fas fa-minus"></i></a>
            </li>
            {{/each}}
        </ol>
      